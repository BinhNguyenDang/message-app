<h1 class="ui inverted yellow center aligned header">Welcome to MessageApp - a complete Chat App</h1>

<h4 class="ui center aligned inverted icon header">
  <i class="circular inverted yellow power off icon "></i>
  Login to Continue ...
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path, data: {turbo: false }) do |f| %>
        <div class="field">
          <%= f.label :usename, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.text_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui yellow button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui black big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>